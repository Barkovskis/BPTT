{% extends 'base.html.twig' %}

{% block title %}Inviters TOP list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello in Inviters TOP list! âœ…</h1>

    <table>
        <tr>
            <th>Inviter aame</th>
            <th>Invited author count</th>
            <th>Invited author book count</th>
            <th>Invited author book</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.name|e }}</td>
                <td>{{ user.icount|e }}</td>
                <td>{{ user.bcount|e }}</td>
                <td>{{ user.rating|e }}</td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('app_users') }}">Users</a>
</div>
{% endblock %}
