{% extends 'base.html.twig' %}

{% block title %}Authors list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello in Authors list! âœ…</h1>

    <table>
        <tr>
            <th>Author name</th>
            <th>Books count</th>
            <th>Inviter vame</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.name|e }}</td>
                <td>{{ user.bcount|e }}</td>
                <td>
                    {% if user.iname is not null %}
                        {{ user.iname|e }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('app_top') }}">Inviters Top</a>
</div>
{% endblock %}
